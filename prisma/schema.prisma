generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  username  String
  email     String    @unique
  processes Process[] @relation("UserProcesses")
}

model Process {
  sigad     String    @id
  priority  String
  subject   String
  deadline  DateTime?
  createdAt DateTime  @default(now())
  tracker   String?

  creatorId String
  creator   User   @relation("UserProcesses", fields: [creatorId], references: [id])
}

model Tracker {
  trackerId   String @id @unique
  trackerName String @unique
}
